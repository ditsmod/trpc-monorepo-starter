{
  "name": "monorepo-starter",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "Starter for monorepositories",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "test": "tsc -b apps/tsconfig.e2e.json && npm run esm-jest",
    "esm-jest": "node  --enable-source-maps --experimental-vm-modules node_modules/jest/bin/jest.js",
    "start": "npm run build && node --watch --enable-source-maps -r dotenv/config apps/server/dist/main.js dotenv_config_path=apps/server/.env",
    "start:dev": "run-p watch start",
    "start-prod": "node -r dotenv/config apps/server/dist/main.js dotenv_config_path=apps/server/.env",
    "build": "tsc -b apps/tsconfig.json",
    "watch": "npm run build -- --watch",
    "lint": "eslint .",
    "clean": "rimraf apps/*/dist*"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^18.19.121",
    "eslint": "^8.57.1",
    "jest": "^30.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}
